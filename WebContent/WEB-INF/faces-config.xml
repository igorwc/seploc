<?xml version="1.0"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
 xmlns:xi="http://www.w3.org/2001/XInclude"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee        http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
 <name>seploc</name>
 <managed-bean>
  <managed-bean-name>login</managed-bean-name>
  <managed-bean-class>br.seploc.mbeans.Login</managed-bean-class>
  <managed-bean-scope>session</managed-bean-scope>
 </managed-bean>
 <!-- Cadastro Papel -->
  <managed-bean>
  <managed-bean-name>papelBean</managed-bean-name>
  <managed-bean-class>br.seploc.mbeans.PapelBean</managed-bean-class>
  <managed-bean-scope>request</managed-bean-scope>
 </managed-bean>
 <!-- Cadastro Opcional -->
 <managed-bean>
  <managed-bean-name>opcionalBean</managed-bean-name>
  <managed-bean-class>br.seploc.mbeans.OpcionalBean</managed-bean-class>
  <managed-bean-scope>request</managed-bean-scope>
 </managed-bean>
 <!-- Cadastro Entrega -->
 <managed-bean>
  <managed-bean-name>entregaBean</managed-bean-name>
  <managed-bean-class>br.seploc.mbeans.EntregaBean</managed-bean-class>
  <managed-bean-scope>request</managed-bean-scope>
 </managed-bean>
 <!-- Cadastro Usuario -->
 <managed-bean>
  <managed-bean-name>usuarioBean</managed-bean-name>
  <managed-bean-class>br.seploc.mbeans.UsuarioBean</managed-bean-class>
  <managed-bean-scope>request</managed-bean-scope>
 </managed-bean>
  <!-- Cadastro Cliente -->
 <managed-bean>
  <managed-bean-name>clienteBean</managed-bean-name>
  <managed-bean-class>br.seploc.mbeans.ClienteBean</managed-bean-class>
  <managed-bean-scope>request</managed-bean-scope>
 </managed-bean> 
  <!-- Cadastro Projeto -->
 <managed-bean>
  <managed-bean-name>projetoClienteBean</managed-bean-name>
  <managed-bean-class>br.seploc.mbeans.ProjetoClienteBean</managed-bean-class>
  <managed-bean-scope>request</managed-bean-scope>
 </managed-bean>
 <!-- Cadastro Cobrador -->
 <managed-bean>
  <managed-bean-name>cobradorBean</managed-bean-name>
  <managed-bean-class>br.seploc.mbeans.CobradorBean</managed-bean-class>
  <managed-bean-scope>request</managed-bean-scope>
 </managed-bean> 
 <!-- Fim dos Cadastros -->
 
 <!-- Conversores -->
 
  <!-- Conversor de String para Número Decimal e vice versa -->
 <converter>
    <converter-id>SeplocCurrencyConverter</converter-id>
    <converter-class> br.seploc.converters.SeplocCurrencyConverter</converter-class>
</converter>

  <!-- Conversor de CPF com marcadores para CPF sem marcadores e vice versa -->
 <converter>
    <converter-id>SeplocCPFConverter</converter-id>
    <converter-class> br.seploc.converters.SeplocCPFConverter</converter-class>
</converter>
<!-- Fim dos Conversores -->

  <!-- Validadores -->
  
<!-- Validador de CPF -->
<validator>
    <validator-id>SeploCPFValidator</validator-id>
    <validator-class>br.seploc.validators.SeploCPFValidator</validator-class>
</validator>
 <!-- Fim dos Validadores -->
 
<!-- Regras Navegação -->
 <navigation-rule>
  <from-view-id>/login.jsf</from-view-id>
  <navigation-case>
   <from-outcome>login</from-outcome>
   <to-view-id>/login.jsf</to-view-id>
   <redirect/>
  </navigation-case>
  <navigation-case>
   <from-outcome>principal</from-outcome>
   <to-view-id>/principal.xhtml</to-view-id>
  </navigation-case>
 </navigation-rule> 
 <!-- configuracao do facelets -->
 <application>
  <view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
 </application>
</faces-config>
