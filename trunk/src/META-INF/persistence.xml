		<class>br.seploc.pojos.Cliente</class>
		<class>br.seploc.pojos.Fonecli</class>
		<class>br.seploc.pojos.Grupoacesso</class>
		<class>br.seploc.pojos.GrupoacessoPK</class>
		<class>br.seploc.pojos.LinhaReq</class>
		<class>br.seploc.pojos.LinhaReqPK</class>
		<class>br.seploc.pojos.NotaFiscal</class>
		<class>br.seploc.pojos.NotaISS</class>
		<class>br.seploc.pojos.OpcionaisReqServ</class>
